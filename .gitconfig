[filter "lfs"]
    smudge = git-lfs smudge %f
    required = true
    clean = git-lfs clean %f
[user]
    name = Feather Osborn
    email = tuffylock@gmail.com
[push]
    default = simple

[log]
    decorate = short

[pager]
    show-branch = true

[color]
    ui = auto

[alias]
    s = status
    a = add -p
    aa = add -A
    c = commit
    l = log --oneline -10
    cm = commit -m
    ig = update-index --assume-unchanged
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    amen = commit --amend
    undo = reset --soft HEAD~1
    wipeout = reset --hard HEAD~1
    mas = checkout master
    co = checkout
    cob = checkout -b
    puush = push -u origin HEAD
    ew = checkout -- .
    rebuildkite = commit --allow-empty -m "Trigger buildkite"
    # https://stackoverflow.com/a/1113140
    deletedat = rev-list -n 1 HEAD --
[core]
    editor = vim
